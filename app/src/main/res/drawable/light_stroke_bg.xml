<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_focused="true">
        <shape>
            <stroke
                android:width="2px"
                android:color="@color/qing"/>
            <solid
                android:color="@color/qing_aero"/>
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape>
            <stroke
                android:width="2px"
                android:color="@color/qing"/>
            <solid
                android:color="@color/qing_aero"/>
        </shape>
    </item>

    <item>
        <shape>
            <stroke
                android:width="2px"
                android:color="@color/qing"/>
            <solid
                android:color="@color/white"/>
        </shape>
    </item>
</selector>