<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.miaxis.face.view.activity.MainActivity">

    <include layout="@layout/title"/>

    <FrameLayout
        android:layout_marginTop="-80dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true">

        <SurfaceView
            android:id="@+id/sv_main"
            android:layout_width="1280dp"
            android:layout_height="960dp" />

        <SurfaceView
            android:id="@+id/sv_rect"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </FrameLayout>

    <com.miaxis.face.view.custom.ResultLayout
        android:id="@+id/rv_result"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:visibility="visible"
        android:id="@+id/tv_pass"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="200dp"
        android:background="@drawable/qing_stroke_bg"
        android:translationZ="200dp"
        android:textColor="@color/qing"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:textSize="90sp"
        android:text="请放身份证"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>
